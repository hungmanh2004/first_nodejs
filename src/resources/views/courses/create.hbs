<div class="mt-4">
    <h3>Đăng tin cho thuê</h3>
    <form method="POST" action="/courses/store">  <!-- nếu action để trống thì nó sẽ submit luôn trong phương thức create -->
        <div class="form-group">
            <label for="name">Tiêu đề</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Loại cây</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm tin</button>
    </form>
</div>