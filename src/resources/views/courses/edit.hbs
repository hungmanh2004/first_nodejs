<div class="mt-4">
    <h3>Cập nhật tin cho thuê</h3>
    <form class="mt-4" method="POST" action="/courses/{{courses._id}}?_method=PUT">  <!-- nếu action để trống thì nó sẽ submit luôn trong phương thức create -->
        <div class="form-group">
            <label for="name">Tiêu đề</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{courses.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{courses.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Loại cây</label>
            <input type="text" class="form-control" value="{{courses.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật tin</button>
    </form>
</div>